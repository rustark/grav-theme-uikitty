{% set menu_big = theme_var('menu_big') ? true %}
{% set custom_logo_width = theme_var('custom_logo_width') ? theme_var('custom_logo_width') : 80 %}
{% set custom_logo_mobile_width = theme_var('custom_logo_mobile_width') ? theme_var('custom_logo_mobile_width') : 30 %}

{% set logo_desktop = theme_var('custom_logo') %}
{% set logo_file_desktop = (logo_desktop|first).name %}

{% set logo_mobile = theme_var('custom_logo_mobile') %}
{% set logo_file_mobile = (logo_mobile|first).name %}

