<div class="uk-navbar-content uk-visible-large uk-navbar-{{ align }}">
    <a href="{{ home_url }}" class="navbar-brand">
    {% if logo_desktop %}
        <img src="{{ url('theme://images/logo/' ~ logo_file_desktop)  }}" alt="{{ site.name }}" class="uk-visible-large" width="{{ custom_logo_width }}" />
        <img src="{{ url('theme://images/logo/' ~ logo_file_mobile)  }}" alt="{{ site.name }}" class="uk-hidden-large" width="{{ custom_logo_mobile_width }}" />
    {% else %}
        <img src="{{ url('theme://images/logo.svg') }}" alt="{{ site.name }}" width="30" />
    {% endif %}
    </a>
</div>

{% if menu_big == false %}
<div class="uk-navbar-content uk-hidden-large uk-navbar-left">
    <a href="{{ home_url }}" class="navbar-brand">
    {% if logo_mobile %}
        <img src="{{ url('theme://images/logo/' ~ logo_file_mobile)  }}" alt="{{ site.name }}" class="uk-hidden-large" width="30" />
    {% else %}
        <img src="{{ url('theme://images/logo.svg') }}" alt="{{ site.name }}" width="30" />
    {% endif %}
    </a>
</div>
{% endif %}